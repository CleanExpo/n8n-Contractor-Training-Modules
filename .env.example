# ===========================================
# AU NRP Contractor Onboarding Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -----------------------------
# LLM Service Configuration
# -----------------------------
LLM_TEXT_API_URL=https://api.your-llm.com/v1
LLM_TEXT_MODEL=claude-3-opus
LLM_TEXT_USERNAME=
LLM_TEXT_PASSWORD=

# -----------------------------
# Gemini Image API
# -----------------------------
GEMINI_IMAGE_API_URL=https://api.gemini.com/v1/images
GEMINI_USERNAME=
GEMINI_PASSWORD=

# -----------------------------
# Google OAuth2 Configuration
# -----------------------------
# Option 1: OAuth2 Flow
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
GOOGLE_REDIRECT_URI=https://developers.google.com/oauthplayground

# Option 2: Service Account (path to JSON key file)
# GOOGLE_SERVICE_ACCOUNT_KEY=./credentials/service-account.json

# -----------------------------
# Google Resource IDs
# -----------------------------
# These are the IDs from your Google Drive/Docs/Sheets
GOOGLE_DRIVE_CREDENTIAL_ID=
GOOGLE_DOCS_CREDENTIAL_ID=
GOOGLE_SHEETS_CREDENTIAL_ID=

# Specific folder/document IDs
DRIVE_FOLDER_MANUALS=
DRIVE_FOLDER_ASSETS=
DRIVE_FOLDER_ASSESS=
DRIVE_FOLDER_CERTS=
SHEET_VERSION_LOG_ID=

# -----------------------------
# n8n Configuration
# -----------------------------
N8N_API_KEY=
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=please-change-me

# -----------------------------
# Business Defaults
# -----------------------------
DEFAULT_BUSINESS_NAME=
DEFAULT_PRIMARY_STATE=NSW
DEFAULT_PASSING_SCORE=80
DEFAULT_IMAGE_STYLE=professional
DEFAULT_TTS_VOICE=en-AU-Standard-A
DEFAULT_VIDEO_MODE=slides

# -----------------------------
# Feature Flags
# -----------------------------
ENABLE_AU_COMPLIANCE_CHECK=true
ENABLE_IMAGE_GENERATION=true
ENABLE_VERSION_LOGGING=true
ENABLE_QUIZ_GENERATION=true

# -----------------------------
# Rate Limiting
# -----------------------------
LLM_REQUESTS_PER_MINUTE=10
GEMINI_REQUESTS_PER_MINUTE=5
GOOGLE_API_REQUESTS_PER_MINUTE=30

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=info
LOG_FILE=./logs/au-nrp-onboarding.log